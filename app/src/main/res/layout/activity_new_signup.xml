<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewSignup"
    android:background="@color/backgroundcolor">

    <androidx.cardview.widget.CardView


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"

        app:cardBackgroundColor="@color/backgroundcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@color/backgroundcolor"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/videocall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/chicle"
                android:text="ProudlyConnected"
                android:textColor="#010622"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/signupnamebox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textbox"
                android:ems="10"
                android:textColor="@color/black"
                android:hint="Enter your Full name"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:textColor="@color/black"

                android:id="@+id/signupemailbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox"
                android:ems="10"
                android:hint="Enter your mail"
                android:inputType="textEmailAddress"
                android:padding="10dp" />
            <EditText
                android:textColor="@color/black"

                android:id="@+id/signupphoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox"
                android:ems="10"
                android:hint="Enter your Phone"
                android:inputType="phone"
                android:padding="10dp" />

            <EditText
                android:textColor="@color/black"

                android:id="@+id/signuppasswordbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp" />

            <Button
                android:id="@+id/createsignupbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttondesign2"
                android:text="create account"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/alreadybtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttondesign"
                android:text="already have an account"
                android:textColor="#FFFFFF" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>